             x:Class="DoAgro.Documentatie.MainDoc"
             Title="Documentatie">

    <ListView x:Name="listViewCulturi" ItemSelected="listViewCulturi_ItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout HorizontalOptions="FillAndExpand" Spacing="0" BackgroundColor="Wheat">
                        <Label Text="{Binding Denumire}"
                               FontSize="Medium"
                               TextColor="#294578"                              
                               FontAttributes="Bold"
                               HorizontalOptions="CenterAndExpand"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
