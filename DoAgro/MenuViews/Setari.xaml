<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoAgro.MenuViews.Setari">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Schimba parola"
                   FontSize="Medium"
                   FontAttributes="Bold"/>
            <Label Text="Adaugati-va adresa de mail cu care sunteti autentificat pentru a primi mesaj cu link-ul de accesare pentru schimbare a parolei"/>
            <Entry Placeholder="Adresa email" x:Name="adresaEmail"/>
            <Button Text="Acceseaza" x:Name="schimbaParola" Clicked="SchimbaParola_Clicked"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="StartAndExpand"
                   Padding="20"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>